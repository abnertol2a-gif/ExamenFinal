@model MvcMovie.Models.Libro

@{
    ViewData["Title"] = "Crear Libro";
}

<div class="container mt-4">

    <h1 class="fw-bold text-primary mb-3">Crear Libro</h1>
    <h5 class="text-muted mb-4">Ingrese la información del nuevo registro</h5>

    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Create" class="row g-3">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label fw-semibold"></label>
                    <input asp-for="Autor" class="form-control" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="ReleaseDate" class="form-label fw-semibold"></label>
                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Rating" class="form-label fw-semibold"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Genre" class="form-label fw-semibold"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Estado" class="form-label fw-semibold"></label>
                    <select asp-for="Estado" class="form-select"
                            asp-items="Html.GetEnumSelectList<WebApplication1.Models.EstadoLibro>()">
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm me-2">
                        Guardar
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                        Volver al listado
                    </a>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
