@model MvcMovie.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}

<h1 class="mb-4 fw-bold text-primary">Editar Libro</h1>

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">

        <h4 class="mb-3 text-secondary">Información del Libro</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control form-control-lg shadow-sm" />
                    <span class="text-danger" asp-validation-for="Nombre"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Autor" class="form-label fw-semibold"></label>
                    <input asp-for="Autor" class="form-control form-control-lg shadow-sm" />
                    <span class="text-danger" asp-validation-for="Autor"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Rating" class="form-label fw-semibold"></label>
                    <input asp-for="Rating" class="form-control form-control-lg shadow-sm" />
                    <span class="text-danger" asp-validation-for="Rating"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="ReleaseDate" class="form-label fw-semibold"></label>
                    <input asp-for="ReleaseDate" class="form-control form-control-lg shadow-sm" />
                    <span class="text-danger" asp-validation-for="ReleaseDate"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Genre" class="form-label fw-semibold"></label>
                    <input asp-for="Genre" class="form-control form-control-lg shadow-sm" />
                    <span class="text-danger" asp-validation-for="Genre"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control form-control-lg shadow-sm" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Estado" class="form-label fw-semibold"></label>
                    <select asp-for="Estado" class="form-select form-select-lg shadow-sm"
                            asp-items="Html.GetEnumSelectList<WebApplication1.Models.EstadoLibro>()">
                    </select>
                    <span class="text-danger" asp-validation-for="Estado"></span>
                </div>

            </div>

            <div class="mt-4 d-flex">
                <button type="submit" class="btn btn-primary btn-lg px-4 shadow-sm">
                    Guardar
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 ms-3 shadow-sm">
                    Volver
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
